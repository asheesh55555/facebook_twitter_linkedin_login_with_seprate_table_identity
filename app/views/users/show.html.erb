 <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo1">your friends</button> 
<div class="container">
<div id="demo1" class="collapse">
      <%if @friends !=nil%>
          <%  @friends.each do |friend| %>
           <%= User.where(id: friend.sender).first.name %>
          <% end %>
      <% end %>
      <%if @friends1 !=nil%>
            <%  @friends1.each do |friend| %>
             <%= User.where(id: friend.receiver).first.name %>
            <% end %>
      <% end %>
</div>
</div>













   <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo">Add a friend</button>  
<div class="container">
<div id="demo" class="collapse">
  
<% @users.each do |user| %>
  <p>
  
    <%= user.name %>
    <%= link_to "Add Friend", user_addfriend_path(id: user.id) %>
  </p>
 
<% end %>
<%if @friend_request !=nil%>

<%  @friend_request.each do |frr| %>
  <p>
     <%unless frr.accept==true&&frr !=nil%>
     <%@userr=User.where(id: frr.sender).first%>
    <%= "u have a friend request from #{@userr.name }" %>
    <%= link_to "accept", user_acc_path(re: current_user.id,se: @userr.id) %>
    
  <%= link_to "delete", user_de_path(re: current_user.id,se: @userr.id) %>
    <%end%>
  </p>
 
  
<% end %>
<% end %>

 </div>
</div>

  

